<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/card_kantor_cabang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingTop="18dp"
        android:paddingBottom="16dp"
        android:paddingLeft="25dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingRight="25dp"
        android:background="@drawable/border_form"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nama_kantor_cabang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/new_text_black"
                android:text="Bogor 2 Car - Tajur"
                android:layout_centerVertical="true"
                android:fontFamily="@font/open_sans_semibold"/>

            <TextView
                android:id="@+id/alamat_kantor_cabang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/new_text_title"
                android:text="Jl. Raya Tajur No.158 A-C RT.01 / RW.07"
                android:layout_centerVertical="true"
                android:fontFamily="@font/open_sans"/>

            <TextView
                android:id="@+id/area_kantor_cabang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/new_text_title"
                android:text="Bogor . Pakuan"
                android:layout_centerVertical="true"
                android:fontFamily="@font/open_sans_semibold"/>
        </LinearLayout>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
        </RadioButton>
    </RelativeLayout>

</LinearLayout>