<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dicicilaja.app.Activity.RegisterAxi3Activity"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/colorBlack">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:background="@color/colorPrimary">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorIcon"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorIcon"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorIcon"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorIcon"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Informasi Rekening"
                    android:textSize="16dp"
                    android:fontFamily="@font/open_sans_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:background="@drawable/border_form"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutNamaBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Bank"
                            android:fontFamily="@font/open_sans"
                            android:textColor="#FFB8B8B8"
                            android:layout_marginTop="20dp"
                            android:textSize="12sp"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerBank"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:fontFamily="@font/open_sans"
                            android:layout_height="40dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutNoRekening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputNoRekening"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="No. Rekening"
                            android:layout_centerHorizontal="true"
                            android:inputType="number"
                            android:maxLength="18"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/inputCabangBank"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutCabangBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputCabangBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cabang Bank"
                            android:layout_centerHorizontal="true"
                            android:inputType="textPersonName|textCapWords"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/inputANRekening"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutANRekening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputANRekening"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="A/N Rekening"
                            android:layout_centerHorizontal="true"
                            android:inputType="textPersonName|textCapWords"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/inputKotaBank"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutKotaBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputKotaBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kota Bank"
                            android:layout_centerHorizontal="true"
                            android:inputType="textPersonName|textCapWords"
                            android:imeOptions="actionDone"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/border_1dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnLanjut"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:text="Lanjut"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/open_sans_bold"
                    android:backgroundTint="@color/colorAccentDark2"/>
            </LinearLayout>
        </ScrollView>
        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"
            android:layout_alignParentTop="true"
            app:mpb_showProgressBackground="false"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding" />
    </RelativeLayout>
</LinearLayout>
