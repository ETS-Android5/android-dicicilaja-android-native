<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/card_database_crh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        card_view:cardCornerRadius="4dp"
        android:elevation="100dp"
        android:contextClickable="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:id="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Apta Samhitta Tusan"/>
                <TextView
                    android:id="@+id/nik"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="10051685"/>
                <TextView
                    android:id="@+id/div_nik"
                    android:layout_below="@+id/nama"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/nik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "/>
                <TextView
                    android:id="@+id/area"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/div_nik"
                    android:layout_below="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="JABAR"/>
                <TextView
                    android:id="@+id/div_area"
                    android:layout_below="@+id/nama"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "/>
                <TextView
                    android:id="@+id/jabatan"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/div_area"
                    android:layout_below="@+id/nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Car"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/button_pilih"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/capsule_confirm"
                    android:textColor="@color/colorWhite"
                    android:paddingTop="5dp"
                    android:textSize="13sp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="16dp"
                    android:clickable="true"
                    android:elevation="1dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="PILIH"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>