<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewSimulation.ui.newsimulationresult.NewSimulationResultActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:titleTextColor="@color/colorWhite">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:background="@color/colorPrimary">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Hasil Simulasi"
                        android:textSize="16dp"
                        android:fontFamily="@font/open_sans_bold"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    android:background="@drawable/border_form"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Pencairan"
                        android:textSize="13sp"
                        android:fontFamily="@font/open_sans_semibold"/>

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorAccentDark2"
                        android:fontFamily="@font/open_sans_bold"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Tenor"
                        android:textSize="13sp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/open_sans_semibold"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tenor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/colorAccentDark2"
                            android:fontFamily="@font/open_sans_bold"/>

                        <TextView
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"/>
                    </RelativeLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Angsuran per Bulan"
                        android:textSize="13sp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/open_sans_semibold"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/angsuran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/colorAccentDark2"
                            android:fontFamily="@font/open_sans_bold"/>

                        <TextView
                            android:id="@+id/tenor_angsuran"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"/>
                    </RelativeLayout>


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/border_1dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:text="Informasi Jaminan"
                    android:textSize="16dp"
                    android:fontFamily="@font/open_sans_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@drawable/border_form"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kendaraan"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/colleteral"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans_bold"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layerType="software"
                        android:src="@drawable/border_dotted_1dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Merk Kendaraan"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/merk"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans_bold"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layerType="software"
                        android:src="@drawable/border_dotted_1dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type Kendaraan"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:textSize="13sp" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layerType="software"
                        android:src="@drawable/border_dotted_1dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tahun Kendaraan"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/year"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans_bold"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layerType="software"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_dotted_1dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/asuransi_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="5dp"
                    android:padding="16dp"
                    android:background="@drawable/border_form"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipe Asuransi"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/insurance"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans_bold"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:padding="16dp"
                    android:background="@drawable/border_form"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"/>

                        <TextView
                            android:id="@+id/area"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans_bold"/>
                    </RelativeLayout>

                </LinearLayout>
                <Button
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Ajukan Pinjaman"
                    android:backgroundTint="@color/colorAccentDark2"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/open_sans_bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"/>

                <FrameLayout
                    android:id="@+id/call_tasya"
                    style="?attr/buttonStyle"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_height="53dp" >

                    <TextView
                        style="?android:attr/buttonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:clickable="false"
                        android:drawablePadding="7dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="#5A5A5A"
                        android:drawableLeft="@drawable/ic_whatsapp_icon"
                        android:focusable="false"
                        android:gravity="center"
                        android:text="Hubungi Tasya" />
                </FrameLayout>
                <TextView
                    android:id="@+id/simulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Hitung Kembali"
                    android:textSize="14sp"
                    android:textColor="@color/colorAccentDark2"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/open_sans_semibold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Rincian hasil simulasi bersifat tidak mengikat dan dapat berubah sewaktu-waktu mengikuti kebijakan yang berlaku. Untuk perhitungan lebih detail, hubungi support kami"
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="4dp"
                    android:fontFamily="@font/open_sans"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>