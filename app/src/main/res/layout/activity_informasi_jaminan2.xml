<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderIn.UI.InformasiJaminan2Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:titleTextColor="@color/colorWhite">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:background="@drawable/border_form"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutJaminan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pilih Jaminan"
                                android:fontFamily="@font/open_sans"
                                android:textColor="#FFB8B8B8"
                                android:layout_marginTop="20dp"
                                android:textSize="12sp"/>

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinnerJaminan"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_height="40dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pilih Area Domisili"
                                android:fontFamily="@font/open_sans"
                                android:textColor="#FFB8B8B8"
                                android:layout_marginTop="20dp"
                                android:textSize="12sp"/>

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinnerArea"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_height="40dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutBrand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Merk Kendaraan"
                                android:fontFamily="@font/open_sans"
                                android:textColor="#FFB8B8B8"
                                android:layout_marginTop="20dp"
                                android:textSize="12sp"/>

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinnerBrand"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_height="40dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Type Kendaraan"
                                android:fontFamily="@font/open_sans"
                                android:textColor="#FFB8B8B8"
                                android:layout_marginTop="20dp"
                                android:textSize="12sp"/>

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinnerType"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_height="40dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/et_tahun_kendaraan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Tahun Kendaraan"
                                android:layout_centerHorizontal="true"
                                android:inputType="number"
                                android:maxLength="4"
                                android:imeOptions="actionDone"
                                android:paddingTop="10dp"
                                android:background="@android:color/transparent"
                                android:layout_marginTop="25dp"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/new_text_black"
                                android:textSize="15sp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/border_1dp"/>

                        <LinearLayout
                            android:id="@+id/angsuran_asuransi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp">

                                <RelativeLayout
                                    android:id="@+id/icon_help1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:padding="10dp"
                                    android:layout_marginTop="20dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_support" />
                                </RelativeLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_toLeftOf="@id/icon_help1"
                                    android:id="@+id/layoutInstallment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:hintEnabled="true"
                                    android:layout_marginRight="9dp"
                                    android:background="@drawable/border_bottom">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Pilih Jenis Angsuran"
                                        android:fontFamily="@font/open_sans"
                                        android:textColor="#FFB8B8B8"
                                        android:textSize="12sp"/>

                                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                        android:id="@+id/spinnerInstallment"
                                        android:layout_width="match_parent"
                                        android:imeOptions="actionNext"
                                        android:nextFocusDown="@+id/spinnerType"
                                        android:textSize="14sp"
                                        android:layout_height="40dp"/>
                                </com.google.android.material.textfield.TextInputLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="5dp">

                                <RelativeLayout
                                    android:id="@+id/icon_help2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:clickable="true"
                                    android:layout_centerVertical="true"
                                    android:padding="10dp"
                                    android:layout_marginTop="20dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/ic_support" />
                                </RelativeLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_toLeftOf="@id/icon_help2"
                                    android:id="@+id/layoutInsurance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:hintEnabled="true"
                                    android:layout_marginRight="9dp"
                                    android:background="@drawable/border_bottom">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Pilih Tipe Asuransi"
                                        android:fontFamily="@font/open_sans"
                                        android:textColor="#FFB8B8B8"
                                        android:textSize="12sp"/>

                                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                        android:id="@+id/spinnerInsurance"
                                        android:layout_width="match_parent"
                                        android:imeOptions="actionNext"
                                        android:nextFocusDown="@+id/spinnerType"
                                        android:textSize="14sp"
                                        android:layout_height="40dp"/>
                                </com.google.android.material.textfield.TextInputLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginLeft="13dp"
                        android:text="Simpan"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/open_sans_bold"
                        android:backgroundTint="@color/colorAccentDark2"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"
            android:layout_alignParentTop="true"
            app:mpb_showProgressBackground="false"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding" />
    </RelativeLayout>
</LinearLayout>