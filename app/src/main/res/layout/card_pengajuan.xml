<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/card_pengajuan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp"
        android:elevation="100dp"
        android:contextClickable="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <TextView
                    android:id="@+id/resi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="#0010001608"/>
                <TextView
                    android:id="@+id/id_pengajuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/div_resi"
                    android:layout_toRightOf="@+id/resi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "/>
                <TextView
                    android:id="@+id/nama_resi"
                    android:layout_toRightOf="@+id/div_resi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DANA MULTIGUNA"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_more_vert"/>
                <TextView
                    android:id="@+id/detail_resi"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/resi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="BPKB Motor"/>
                <TextView
                    android:id="@+id/div_detail_resi"
                    android:layout_below="@+id/resi"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/detail_resi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "/>
                <TextView
                    android:id="@+id/harga_resi"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/div_detail_resi"
                    android:layout_below="@+id/resi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Rp 9.500.000"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:minHeight="30dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06 Desember 2017"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/capsule_tag"
                    android:textColor="@color/colorWhite"
                    android:paddingTop="2dp"
                    android:textSize="10sp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="REALISASI"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>