<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.variable.dicicilaja.Fragment.RiwayatPengajuanFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/title_pengajuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">
                    <TextView
                        android:id="@+id/title_penanggung_jawab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Penanggung Jawab"/>
                </RelativeLayout>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/card_penanggung_jawab"
                android:layout_below="@+id/title_pengajuan"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/top_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:width="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Nama"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text=":"/>
                            <TextView
                                android:id="@+id/api_name"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Fawaz Rifqi"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:width="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Jabatan"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text=":"/>
                            <TextView
                                android:id="@+id/api_role"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="TC (Traffic Coordinator)"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:width="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="NIK"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text=":"/>
                            <TextView
                                android:id="@+id/api_user_id"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="98071098312"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:width="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Waktu Respon"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text=":"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="2 Menit"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:width="120dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Catatan"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text=":"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Tolong segera di proses karena nasabah sangat butuh segera"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:id="@+id/layout_title_jejak"
                android:layout_below="@+id/card_penanggung_jawab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">
                    <TextView
                        android:id="@+id/title_jejak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Jejang Pengajuan"/>
                </RelativeLayout>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/card_jejak"
                android:layout_below="@+id/layout_title_jejak"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/detail_item"
                        android:layout_alignLeft="@+id/detail_item"
                        android:layout_alignStart="@+id/detail_item">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginTop="33dp"
                                android:layout_marginLeft="18dp"
                                android:background="@drawable/border_left"/>
                            <ImageView
                                android:id="@+id/icon_process_1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_circle"
                                android:padding="8dp"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="5dp"/>
                            <TextView
                                android:id="@+id/title_process_1"
                                android:layout_toRightOf="@+id/icon_process_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Verifikasi"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/name_process_1"
                                android:layout_below="@+id/title_process_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:layout_toRightOf="@+id/icon_process_1"
                                android:text="Rienaldi (TC)" />
                            <TextView
                                android:layout_below="@+id/name_process_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:layout_toRightOf="@+id/icon_process_1"
                                android:text="2 Menit • 16 Des 2017" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginLeft="18dp"
                                android:background="@drawable/border_left"/>
                            <ImageView
                                android:id="@+id/icon_process_2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_circle"
                                android:padding="8dp"
                                android:layout_marginTop="5dp"/>
                            <TextView
                                android:id="@+id/title_process_2"
                                android:layout_toRightOf="@+id/icon_process_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Proses"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/name_process_2"
                                android:layout_below="@+id/title_process_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:layout_toRightOf="@+id/icon_process_2"
                                android:text="Fawaz (CRH)" />
                            <TextView
                                android:layout_below="@+id/name_process_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:layout_toRightOf="@+id/icon_process_2"
                                android:text="24 Menit • 16 Des 2017" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="18dp"
                                android:background="@drawable/border_left"/>
                            <ImageView
                                android:id="@+id/icon_process_3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_circle"
                                android:padding="8dp"
                                android:layout_marginTop="5dp"/>
                            <TextView
                                android:id="@+id/title_process_3"
                                android:layout_toRightOf="@+id/icon_process_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textSize="12sp"/>
                            <TextView
                                android:id="@+id/name_process_3"
                                android:layout_below="@+id/title_process_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:layout_toRightOf="@+id/icon_process_3"
                                android:text="Deni (CRO)" />
                            <TextView
                                android:layout_below="@+id/name_process_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:layout_toRightOf="@+id/icon_process_3"
                                android:text="2 Jam • 16 Des 2017" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:id="@+id/proses"
                android:layout_below="@+id/card_jejak"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:clickable="true"
                android:elevation="4dp"
                android:paddingTop="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_proses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROSES PENGAJUAN"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent2"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
