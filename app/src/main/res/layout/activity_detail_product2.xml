<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorAccent"
        app:titleTextColor="@color/colorWhite">
    </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_above="@+id/button_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/pengirim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/title_tujuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tujuan Pengiriman"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="@dimen/font_semi_medium"/>

                    <LinearLayout
                        android:layout_below="@id/title_tujuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/detail_user"
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_nama"
                                android:layout_below="@id/title_tujuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ziady Mubaraq"
                                android:fontFamily="@font/open_sans"
                                android:textAllCaps="true"
                                android:textSize="@dimen/font_medium"/>

                            <TextView
                                android:id="@+id/tv_alamat"
                                android:layout_below="@id/tv_nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jalan Setiabudhi No.206, Isola, Sukasari, Hegarmanah, Cidadap, Kota Bandung, Jawa Barat 40154"
                                android:fontFamily="@font/open_sans"
                                android:textSize="@dimen/font_medium"/>

                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/colorAccent"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="UBAH" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/barang_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pengirim"
                    android:padding="16dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorWhite">

                    <ImageView
                        android:id="@+id/barang_picture"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/user" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/barang_picture"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title_barang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xiaomi A2 Lite"
                            android:fontFamily="@font/open_sans_bold"
                            android:textSize="@dimen/font_title"/>

                        <TextView
                            android:id="@+id/point"
                            android:layout_below="@id/title_barang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="450 Point"
                            android:textSize="@dimen/font_medium"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/spek_barang_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_below="@+id/barang_image"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/spek_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Point"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="@dimen/font_semi_medium"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/spek_title">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_kategori"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Point"
                                android:fontFamily="@font/open_sans"
                                android:layout_weight="1"
                                android:textSize="@dimen/font_medium"/>

                            <TextView
                                android:id="@+id/tv_total_point"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="3000 POINT"
                                android:textSize="@dimen/font_medium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_processor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Point Barang"
                                android:fontFamily="@font/open_sans"
                                android:layout_weight="1"
                                android:textSize="@dimen/font_medium"/>

                            <TextView
                                android:id="@+id/tv_point_barang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="450 POINT"
                                android:textSize="@dimen/font_medium"/>

                        </LinearLayout>

                        <View
                            android:id="@+id/div"
                            android:layout_below="@id/barang_picture"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/darker_gray"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/title_os"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sisa Point"
                                android:fontFamily="@font/open_sans"
                                android:layout_weight="1"
                                android:textSize="@dimen/font_medium"/>

                            <TextView
                                android:id="@+id/tv_sisa_point"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="2550 POINT"
                                android:textSize="@dimen/font_medium"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/spek_barang_detail">

                    <Button
                        android:id="@+id/klaim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:fontFamily="@font/open_sans"
                        android:textAllCaps="true"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorAccent"/>

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</LinearLayout>