<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/card_notif"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_form"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">
        <ImageView
            android:id="@+id/image_cart"
            android:layout_width="48dp"
            android:layout_marginRight="15dp"
            android:layout_height="48dp"
            android:src="@drawable/motor1"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_toRightOf="@id/image_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="15sp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/product_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/colorAccentDark2"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" âœ• -"
                    android:textColor="@color/colorAccentDark"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp">
        <LinearLayout
            android:layout_below="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="64dp"
                android:id="@+id/minus"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_remove_white_24dp"
                android:textAlignment="center"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"></ImageView>
            <TextView
                android:id="@+id/value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:fontFamily="@font/open_sans_bold"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textAlignment="center"></TextView>
            <ImageView
                android:id="@+id/plus"
                android:layout_width="28dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_add_white_24dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"></ImageView>
        </LinearLayout>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_delete_cart"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>