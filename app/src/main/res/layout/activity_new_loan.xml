<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.NewLoanActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:titleTextColor="@color/colorWhite">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:text="Informasi Pinjaman"
                        android:textSize="16dp"
                        android:fontFamily="@font/open_sans_bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:padding="16dp"
                        android:background="@color/colorWhite"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutTenor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:layout_marginTop="10dp"
                                android:id="@+id/spinnerTenor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_multiline="false"
                                app:ms_dropDownHintView="@layout/dropdown_hint_item"
                                app:ms_hintView="@layout/hint_item"
                                app:ms_hint="Pilih Tenor Pinjaman"
                                app:ms_enableFloatingLabel="true"
                                app:ms_enableErrorLabel="false"
                                app:ms_floatingLabelText="Pilih Tenor Pinjaman"
                                app:ms_baseColor="@color/colorBlack"
                                app:ms_highlightColor="@color/colorPrimaryDark"
                                app:ms_errorColor="@color/colorPrimaryDark"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="9dp"
                                android:imeOptions="actionNext"
                                android:nextFocusDown="@+id/spinnerArea"
                                app:ms_alignLabels="true"
                                android:textSize="15sp"
                                app:ms_hintTextSize="14sp"
                                app:ms_floatingLabelColor="@color/colorBackgroundDark"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <fr.ganfra.materialspinner.MaterialSpinner
                                android:layout_marginTop="10dp"
                                android:id="@+id/spinnerArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_multiline="false"
                                app:ms_dropDownHintView="@layout/dropdown_hint_item"
                                app:ms_hintView="@layout/hint_item"
                                app:ms_hint="Pilih Area"
                                app:ms_enableFloatingLabel="true"
                                app:ms_enableErrorLabel="false"
                                app:ms_floatingLabelText="Pilih Area"
                                app:ms_baseColor="@color/colorBlack"
                                app:ms_highlightColor="@color/colorPrimaryDark"
                                app:ms_errorColor="@color/colorPrimaryDark"
                                android:layout_marginLeft="9dp"
                                android:layout_marginRight="9dp"
                                android:imeOptions="actionNext"
                                android:nextFocusDown="@+id/spinnerInstallment"
                                app:ms_alignLabels="true"
                                android:textSize="15sp"
                                app:ms_hintTextSize="14sp"
                                app:ms_floatingLabelColor="@color/colorBackgroundDark"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/icon_help1"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_support"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutInstallment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/icon_help1">

                                <fr.ganfra.materialspinner.MaterialSpinner
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/spinnerInstallment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:ms_multiline="false"
                                    app:ms_dropDownHintView="@layout/dropdown_hint_item"
                                    app:ms_hintView="@layout/hint_item"
                                    app:ms_hint="Pilih Jenis Angsuran"
                                    app:ms_enableFloatingLabel="true"
                                    app:ms_enableErrorLabel="false"
                                    app:ms_floatingLabelText="Pilih Jenis Angsuran"
                                    app:ms_baseColor="@color/colorBlack"
                                    app:ms_highlightColor="@color/colorPrimaryDark"
                                    app:ms_errorColor="@color/colorPrimaryDark"
                                    android:layout_marginLeft="9dp"
                                    android:layout_marginRight="9dp"
                                    android:imeOptions="actionNext"
                                    android:nextFocusDown="@+id/spinnerInsurance"
                                    app:ms_alignLabels="true"
                                    android:textSize="15sp"
                                    app:ms_hintTextSize="14sp"
                                    app:ms_floatingLabelColor="@color/colorBackgroundDark"/>

                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/icon_help2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_support"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/layoutInsurance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/icon_help2">

                                <fr.ganfra.materialspinner.MaterialSpinner
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/spinnerInsurance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:ms_multiline="false"
                                    app:ms_dropDownHintView="@layout/dropdown_hint_item"
                                    app:ms_hintView="@layout/hint_item"
                                    app:ms_hint="Pilih Tipe Asuransi"
                                    app:ms_enableFloatingLabel="true"
                                    app:ms_enableErrorLabel="false"
                                    app:ms_floatingLabelText="Pilih Tipe Asuransi"
                                    app:ms_baseColor="@color/colorBlack"
                                    app:ms_highlightColor="@color/colorPrimaryDark"
                                    app:ms_errorColor="@color/colorPrimaryDark"
                                    android:layout_marginLeft="9dp"
                                    android:layout_marginRight="9dp"
                                    android:imeOptions="actionDone"
                                    app:ms_alignLabels="true"
                                    android:textSize="15sp"
                                    app:ms_hintTextSize="14sp"
                                    app:ms_floatingLabelColor="@color/colorBackgroundDark"/>

                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>

                        <Button
                            android:id="@+id/next"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:text="Hitung Simulasi"
                            android:backgroundTint="@color/colorAccentDark2"
                            android:textColor="@color/colorWhite"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginTop="32dp"/>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</LinearLayout>