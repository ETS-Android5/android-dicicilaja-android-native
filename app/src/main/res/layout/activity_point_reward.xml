<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dicicilaja.app.Activity.BusinesRewardActivity"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:titleTextColor="@color/colorWhite">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_above="@+id/button_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/bar_point"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="16dp"
                    android:background="@color/colorAccent">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_picture_page"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/user"
                        app:civ_border_color="#ecf0f1"
                        app:civ_border_width="0.5dp" />

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_picture_page"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorWhite"
                        android:text="Ziady Mubaraq"
                        android:textSize="@dimen/ib_fr_space_16"
                        android:textAllCaps="true"/>

                    <LinearLayout
                        android:id="@+id/ll_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_name"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profile_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/ib_fr_space_24"
                            android:text="3000"
                            android:textAllCaps="true"/>

                        <ImageView
                            android:id="@+id/coin"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/beri_nilai"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/info"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/bantuan"/>

                        <TextView
                            android:id="@+id/profile_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"
                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/ib_fr_space_12"
                            android:text="Periode Business Reward Bulan Maret"
                            android:layout_marginLeft="2dp"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_motor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bar_point"
                    android:background="@color/colorPrimary">
                    <RelativeLayout
                        android:id="@+id/top_pengajuan"
                        android:layout_width="match_parent"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/title_pc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Motor"/>
                        <RelativeLayout
                            android:id="@+id/show_all_promo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/txt_all_promo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Lihat Semua"
                                android:layout_centerVertical="true"
                                android:textColor="@color/colorAccent"/>
                            <!--<ImageView-->
                                <!--android:layout_toRightOf="@+id/txt_all_promo"-->
                                <!--android:layout_width="15dp"-->
                                <!--android:layout_height="15dp"-->
                                <!--android:src="@drawable/ic_show_more"-->
                                <!--android:layout_centerVertical="true"/>-->
                        </RelativeLayout>
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_motor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top_pengajuan"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_hp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_motor"
                    android:background="@color/colorPrimary">
                    <RelativeLayout
                        android:id="@+id/top_pengajuan2"
                        android:layout_width="match_parent"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/title_pc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Handphone"/>
                        <RelativeLayout
                            android:id="@+id/show_all_promo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/txt_all_promo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Lihat Semua"
                                android:layout_centerVertical="true"
                                android:textColor="@color/colorAccent"/>
                            <!--<ImageView-->
                            <!--android:layout_toRightOf="@+id/txt_all_promo"-->
                            <!--android:layout_width="15dp"-->
                            <!--android:layout_height="15dp"-->
                            <!--android:src="@drawable/ic_show_more"-->
                            <!--android:layout_centerVertical="true"/>-->
                        </RelativeLayout>
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top_pengajuan2"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_elektronik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_hp"
                    android:background="@color/colorPrimary">
                    <RelativeLayout
                        android:id="@+id/top_pengajuan3"
                        android:layout_width="match_parent"
                        android:paddingTop="16dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/title_pc3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Elektronik"/>
                        <RelativeLayout
                            android:id="@+id/show_all_promo3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:id="@+id/txt_all_promo3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="Lihat Semua"
                                android:layout_centerVertical="true"
                                android:textColor="@color/colorAccent"/>
                            <!--<ImageView-->
                            <!--android:layout_toRightOf="@+id/txt_all_promo"-->
                            <!--android:layout_width="15dp"-->
                            <!--android:layout_height="15dp"-->
                            <!--android:src="@drawable/ic_show_more"-->
                            <!--android:layout_centerVertical="true"/>-->
                        </RelativeLayout>
                    </RelativeLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_elektronika"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/top_pengajuan3"/>
                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</LinearLayout>
