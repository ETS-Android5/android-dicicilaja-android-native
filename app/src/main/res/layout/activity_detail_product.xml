<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:titleTextColor="@color/colorWhite">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/pbDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_above="@+id/button_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/barang_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@color/colorWhite">

                    <ImageView
                        android:id="@+id/barang_picture"
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/user" />

                    <!--<View-->
                        <!--android:id="@+id/div"-->
                        <!--android:layout_below="@id/barang_picture"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="1dp"-->
                        <!--android:background="@android:color/darker_gray"/>-->

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/barang_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_below="@+id/barang_image"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/title_barang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xiaomi A2 Lite"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="@dimen/font_title"/>

                    <TextView
                        android:id="@+id/tv_point"
                        android:layout_below="@id/title_barang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="450 Point"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="@dimen/font_medium"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/spek_barang_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_below="@+id/barang_detail"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorWhite">

                    <TextView
                        android:id="@+id/spek_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spesifikasi"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="@dimen/font_medium"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/spek_title">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <!--<TextView-->
                                <!--android:id="@+id/title_kategori"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="Kategori              : "-->
                                <!--android:fontFamily="@font/open_sans"-->
                                <!--android:textSize="@dimen/font_medium"/>-->

                            <TextView
                                android:id="@+id/deskripsi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Handphone"
                                android:fontFamily="@font/open_sans"
                                android:textSize="@dimen/font_medium"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/spek_barang_detail">

                    <Button
                        android:id="@+id/klaim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Klaim Produk"
                        android:textAllCaps="true"
                        android:fontFamily="@font/open_sans"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/colorWhite"
                        android:background="@color/colorAccent"/>

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>

</LinearLayout>