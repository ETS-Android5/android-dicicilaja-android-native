<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:titleTextColor="@color/colorWhite">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Detail Penukaran"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_sukses"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/checked"/>
        
        <TextView
            android:id="@+id/title_sukses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_sukses"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/statusGreen"
            android:fontFamily="@font/open_sans_bold"
            android:text="Sukses!"/>

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_sukses"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/font_medium"
            android:text="Penukaran telah berhasil pada"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/detail2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="@dimen/font_semi_medium"
                android:text="tanggal "/>

            <TextView
                android:id="@+id/tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="@dimen/font_semi_medium"
                android:text=" 30 Maret 2019"/>

        </LinearLayout>

        <TextView
            android:id="@+id/detail3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail2"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/font_mini"
            android:text="Butuh bantuan?"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail3"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/detail4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_mini"
                android:fontFamily="@font/open_sans"
                android:text="Tanya saya di"/>

            <TextView
                android:id="@+id/detail5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent2"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/font_mini"
                android:text=" 08111465005"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/spek_barang_detail">

            <Button
                android:id="@+id/klaim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat Detail"
                android:textAllCaps="true"
                android:fontFamily="@font/open_sans"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>