<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_sukses"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_checklist"/>
        
        <TextView
            android:id="@+id/title_sukses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_sukses"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/statusGreen"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Sukses!"/>

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_sukses"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/font_medium"
            android:text="Penukaran telah berhasil pada"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/detail2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="14sp"
                android:text="tanggal "/>

            <TextView
                android:id="@+id/tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="14sp"
                android:text=" 30 Maret 2019"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/spek_barang_detail">

            <FrameLayout
                android:id="@+id/call_tasya"
                style="?attr/buttonStyle"
                android:layout_width="match_parent"
                android:layout_above="@+id/klaim"
                android:backgroundTint="@color/colorWhite"
                android:layout_height="53dp" >

                <TextView
                    style="?android:attr/buttonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:clickable="false"
                    android:drawablePadding="7dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="#5A5A5A"
                    android:drawableLeft="@drawable/ic_whatsapp_icon"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="Hubungi Tasya" />
            </FrameLayout>

            <Button
                android:id="@+id/klaim"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Lihat Riwayat"
                android:textAllCaps="true"
                android:fontFamily="@font/open_sans_bold"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorAccent"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>