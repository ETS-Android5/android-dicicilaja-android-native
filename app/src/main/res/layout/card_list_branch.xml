<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/card_branch"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:contextClickable="true"
        android:layout_width="match_parent"
        android:background="@drawable/border_branch"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/branch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cikarang-Sentra Cikarang"
                android:textSize="14sp"
                android:textColor="#FF1E1F39"
                android:fontFamily="@font/open_sans"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Komp. Ruko Bagasasi/ Sentra Cikarang Blok B 20…"
                android:textSize="10sp"
                android:textColor="#929292"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#929292"
                    android:fontFamily="@font/open_sans"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • "
                    android:textSize="10sp"
                    android:textColor="#929292"
                    android:fontFamily="@font/open_sans"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/title_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#929292"
                    android:fontFamily="@font/open_sans"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_show_more_grey_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>