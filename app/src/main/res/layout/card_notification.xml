<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/card_notif"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_form"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:gravity="center_vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:id="@+id/icon_category"
            android:layout_width="25dp"
            android:layout_marginRight="15dp"
            android:layout_height="25dp"
            android:src="@drawable/notif_gathering"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_category"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notif_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="14sp"
                android:textColor="#1E1F39"
                android:text="-"/>

            <TextView
                android:id="@+id/notif_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:textColor="#D91E1F39"
                android:text="-"/>

            <TextView
                android:id="@+id/notif_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="13sp"
                android:layout_marginTop="8dp"
                android:textColor="#B8B8B8"
                android:text="-"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>