<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dicicilaja.app.Activity.RegisterAxi2Activity"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:background="@color/colorPrimary"
            app:titleTextColor="@color/colorBlack">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:background="@color/colorPrimary">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorIcon"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorIcon"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorIcon"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorIcon"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:padding="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_centerInParent="true"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Informasi KTP"
                    android:textSize="16dp"
                    android:fontFamily="@font/open_sans_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:background="@drawable/border_form"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutKtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputKtp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="No KTP"
                            android:layout_centerHorizontal="true"
                            android:inputType="number"
                            android:maxLength="16"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/inputTempatLahir"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutTempatLahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputTempatLahir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tempat Lahir"
                            android:layout_centerHorizontal="true"
                            android:inputType="textPersonName|textCapWords"
                            android:imeOptions="actionDone"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputTanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tanggal Lahir"
                            android:layout_centerHorizontal="true"
                            android:imeOptions="actionDone"
                            android:inputType="date"
                            android:focusable="false"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:cursorVisible="false"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutJenisKelamin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jenis Kelamin"
                            android:fontFamily="@font/open_sans"
                            android:textColor="#FFB8B8B8"
                            android:layout_marginTop="20dp"
                            android:textSize="12sp"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerJenisKelamin"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:fontFamily="@font/open_sans"
                            android:layout_height="40dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputAlamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Alamat KTP"
                            android:layout_centerHorizontal="true"
                            android:inputType="textMultiLine|textPersonName|textCapWords"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/inputRt"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutRt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputRt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="RT KTP"
                            android:layout_centerHorizontal="true"
                            android:inputType="number"
                            android:maxLength="3"
                            android:imeOptions="actionDone"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutRw"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputRw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="RW KTP"
                            android:layout_centerHorizontal="true"
                            android:inputType="number"
                            android:maxLength="3"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/inputTempatLahir"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status Perkawinan"
                            android:fontFamily="@font/open_sans"
                            android:textColor="#FFB8B8B8"
                            android:layout_marginTop="20dp"
                            android:textSize="12sp"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerStatus"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:fontFamily="@font/open_sans"
                            android:layout_height="40dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutNamaPasangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputNamaPasangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama Pasangan"
                            android:layout_centerHorizontal="true"
                            android:inputType="textPersonName|textCapWords"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/inputNoKtpPasangan"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/lineNamaPasangan"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutNoKtpPasangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:id="@+id/inputNoKtpPasangan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="No KTP Pasangan
"
                            android:layout_centerHorizontal="true"
                            android:inputType="number"
                            android:maxLength="16"
                            android:imeOptions="actionNext"
                            android:nextFocusDown="@id/inputNoKtpPasangan"
                            android:paddingTop="10dp"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/lineNoKtpPasangan"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutProvinsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Provinsi"
                            android:fontFamily="@font/open_sans"
                            android:textColor="#FFB8B8B8"
                            android:layout_marginTop="20dp"
                            android:textSize="12sp"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerProvinsi"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:fontFamily="@font/open_sans"
                            android:layout_height="40dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutKota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kota"
                            android:fontFamily="@font/open_sans"
                            android:textColor="#FFB8B8B8"
                            android:layout_marginTop="20dp"
                            android:textSize="12sp"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerKota"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:fontFamily="@font/open_sans"
                            android:layout_height="40dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutKecamatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kecamatan"
                            android:fontFamily="@font/open_sans"
                            android:textColor="#FFB8B8B8"
                            android:layout_marginTop="20dp"
                            android:textSize="12sp"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerDistrik"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:fontFamily="@font/open_sans"
                            android:layout_height="40dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layoutKelurahan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kelurahan"
                            android:fontFamily="@font/open_sans"
                            android:textColor="#FFB8B8B8"
                            android:layout_marginTop="20dp"
                            android:textSize="12sp"/>

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerDesa"
                            android:layout_width="match_parent"
                            android:textSize="15sp"
                            android:fontFamily="@font/open_sans"
                            android:layout_height="40dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:src="@drawable/border_1dp"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutKodepos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:hintEnabled="true">

                        <EditText
                            android:enabled="false"
                            android:id="@+id/inputKodepos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kode Pos"
                            android:layout_centerHorizontal="true"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:paddingTop="10dp"
                            android:maxLength="5"
                            android:background="@android:color/transparent"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/new_text_black"
                            android:textSize="15sp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/border_1dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnLanjut"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:text="Lanjut"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/open_sans_bold"
                    android:backgroundTint="@color/colorAccentDark2"/>
            </LinearLayout>
        </ScrollView>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"
            android:layout_alignParentTop="true"
            app:mpb_showProgressBackground="false"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding" />
    </RelativeLayout>
</LinearLayout>
