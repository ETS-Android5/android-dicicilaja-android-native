<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dicicilaja.dicicilaja.Activity.RegisterAxi2Activity"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@color/colorBlack">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informasi KTP"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/selectLayoutKtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <EditText
                    android:id="@+id/inputKtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="No. KTP"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/selectLayoutTempat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <EditText
                    android:id="@+id/inputTempat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tempat Lahir"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/selectLayoutTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">
                <EditText
                    android:id="@+id/inputTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal Lahir"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/selectLayoutJk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tempat Pendataran"
                    android:layout_marginLeft="9dp"
                    android:layout_marginBottom="5dp"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/radioL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Laki-laki"
                            android:layout_marginRight="10dp"/>
                        <RadioButton
                            android:id="@+id/radioP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perempuan"/>
                    </LinearLayout>
                </RadioGroup>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/selectLayoutAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <EditText
                    android:id="@+id/inputAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alamat KTP"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/selectLayoutRtRw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <EditText
                    android:id="@+id/inputRtRw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RT/RW KTP"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutStatusPerkawinan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinnerStatusPerkawinan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_multiline="false"
                    app:ms_dropDownHintView="@layout/dropdown_hint_item"
                    app:ms_hintView="@layout/hint_item"
                    app:ms_hint="Pilih Status Perkawinan"
                    app:ms_enableFloatingLabel="true"
                    app:ms_enableErrorLabel="false"
                    app:ms_floatingLabelText="Pilih Status Perkawinan"
                    app:ms_baseColor="@color/colorBlack"
                    app:ms_highlightColor="@color/colorPrimaryDark"
                    app:ms_errorColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    app:ms_alignLabels="true"
                    android:textSize="14sp"
                    app:ms_hintTextSize="14sp"
                    app:ms_floatingLabelColor="@color/colorBackgroundDark"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutProvinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinnerProvinsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_multiline="false"
                    app:ms_dropDownHintView="@layout/dropdown_hint_item"
                    app:ms_hintView="@layout/hint_item"
                    app:ms_hint="Pilih Provinsi"
                    app:ms_enableFloatingLabel="true"
                    app:ms_enableErrorLabel="false"
                    app:ms_floatingLabelText="Pilih Provinsi"
                    app:ms_baseColor="@color/colorBlack"
                    app:ms_highlightColor="@color/colorPrimaryDark"
                    app:ms_errorColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    app:ms_alignLabels="true"
                    android:textSize="14sp"
                    app:ms_hintTextSize="14sp"
                    app:ms_floatingLabelColor="@color/colorBackgroundDark"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutKotaKab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinnerKotaKab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_multiline="false"
                    app:ms_dropDownHintView="@layout/dropdown_hint_item"
                    app:ms_hintView="@layout/hint_item"
                    app:ms_hint="Pilih Kota/Kabupaten"
                    app:ms_enableFloatingLabel="true"
                    app:ms_enableErrorLabel="false"
                    app:ms_floatingLabelText="Pilih Kota/Kabupaten"
                    app:ms_baseColor="@color/colorBlack"
                    app:ms_highlightColor="@color/colorPrimaryDark"
                    app:ms_errorColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    app:ms_alignLabels="true"
                    android:textSize="14sp"
                    app:ms_hintTextSize="14sp"
                    app:ms_floatingLabelColor="@color/colorBackgroundDark"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutKecamatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinnerKecamatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_multiline="false"
                    app:ms_dropDownHintView="@layout/dropdown_hint_item"
                    app:ms_hintView="@layout/hint_item"
                    app:ms_hint="Pilih Kecamatan"
                    app:ms_enableFloatingLabel="true"
                    app:ms_enableErrorLabel="false"
                    app:ms_floatingLabelText="Pilih Kecamatan"
                    app:ms_baseColor="@color/colorBlack"
                    app:ms_highlightColor="@color/colorPrimaryDark"
                    app:ms_errorColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    app:ms_alignLabels="true"
                    android:textSize="14sp"
                    app:ms_hintTextSize="14sp"
                    app:ms_floatingLabelColor="@color/colorBackgroundDark"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayoutKelurahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:layout_marginTop="10dp"
                    android:id="@+id/spinnerKelurahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_multiline="false"
                    app:ms_dropDownHintView="@layout/dropdown_hint_item"
                    app:ms_hintView="@layout/hint_item"
                    app:ms_hint="Pilih Provinsi"
                    app:ms_enableFloatingLabel="true"
                    app:ms_enableErrorLabel="false"
                    app:ms_floatingLabelText="Pilih Provinsi"
                    app:ms_baseColor="@color/colorBlack"
                    app:ms_highlightColor="@color/colorPrimaryDark"
                    app:ms_errorColor="@color/colorPrimaryDark"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    app:ms_alignLabels="true"
                    android:textSize="14sp"
                    app:ms_hintTextSize="14sp"
                    app:ms_floatingLabelColor="@color/colorBackgroundDark"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/selectLayoutKodePos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <EditText
                    android:id="@+id/inputKodePos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Kota/Kabupaten"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif"
                    android:padding="10dp"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/btnLanjut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/capsule_button"
                android:text="Lanjut"
                android:textColor="@color/colorWhite"
                android:paddingLeft="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingRight="25dp"
                android:textSize="14sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Step 2 dari 5"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
