<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.NewSimulationActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:titleTextColor="@color/colorWhite">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Pilih Jaminan"
                        android:textSize="16dp"
                        android:fontFamily="@font/open_sans_bold"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_car"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:contextClickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mobil"
                                android:fontFamily="@font/open_sans_semibold"
                                android:layout_marginLeft="10dp"
                                android:textSize="15dp"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:src="@drawable/capsule_value"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_motorcycle"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:contextClickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="16dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sepeda Motor"
                                android:textSize="15dp"
                                android:fontFamily="@font/open_sans_semibold"
                                android:layout_marginLeft="10dp"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="30dp"
                                android:src="@drawable/capsule_value"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/title_support"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Support"
                        android:textSize="15dp"
                        android:textColor="@color/colorAccentDark2"
                        android:layout_gravity="center"
                        android:drawableLeft="@drawable/ic_support"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/open_sans_semibold"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="Rincian hasil simulasi bersifat tidak mengikat dan dapat berubah sewaktu-waktu mengikuti kebijakan yang berlaku. Untuk perhitungan lebih detail, hubungi support kami"
                    android:layout_gravity="center"
                    android:textSize="11dp"
                    android:textAlignment="center"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="4dp"
                    android:fontFamily="@font/open_sans"/>
            </RelativeLayout>

        </ScrollView>
    </RelativeLayout>
</LinearLayout>