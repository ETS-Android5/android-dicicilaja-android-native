<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderIn.UI.DataCalonPeminjamActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            app:titleTextColor="@color/colorWhite">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:background="@drawable/border_form"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_nama_lengkap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/et_nama_lengkap"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nama Lengkap"
                                android:layout_centerHorizontal="true"
                                android:inputType="textPersonName|textCapWords"
                                android:imeOptions="actionNext"
                                android:paddingTop="10dp"
                                android:background="@android:color/transparent"
                                android:nextFocusDown="@+id/et_nomor_ktp"
                                android:layout_marginTop="25dp"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/new_text_black"
                                android:textSize="15sp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/et_nomor_ktp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nomor KTP"
                                android:maxLength="16"
                                android:layout_centerHorizontal="true"
                                android:inputType="number"
                                android:imeOptions="actionNext"
                                android:paddingTop="10dp"
                                android:background="@android:color/transparent"
                                android:nextFocusDown="@+id/et_alamat_email"
                                android:layout_marginTop="25dp"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/new_text_black"
                                android:textSize="15sp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/et_alamat_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Alamat Email"
                                android:layout_centerHorizontal="true"
                                android:inputType="textEmailAddress"
                                android:imeOptions="actionNext"
                                android:paddingTop="10dp"
                                android:background="@android:color/transparent"
                                android:nextFocusDown="@+id/et_nomor_ktp"
                                android:layout_marginTop="25dp"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/new_text_black"
                                android:textSize="15sp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_hp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/et_no_handphone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="No. Handphone"
                                android:layout_centerHorizontal="true"
                                android:inputType="number"
                                android:maxLength="16"
                                android:imeOptions="actionDone"
                                android:paddingTop="10dp"
                                android:background="@android:color/transparent"
                                android:layout_marginTop="25dp"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/new_text_black"
                                android:textSize="15sp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutProvinsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Provinsi"
                                android:fontFamily="@font/open_sans"
                                android:textColor="#FFB8B8B8"
                                android:layout_marginTop="20dp"
                                android:textSize="12sp"/>

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinnerProvinsi"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_height="40dp"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutKota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kota"
                                android:fontFamily="@font/open_sans"
                                android:textColor="#FFB8B8B8"
                                android:layout_marginTop="20dp"
                                android:textSize="12sp"/>

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinnerKota"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_height="40dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutKecamatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kecamatan"
                                android:fontFamily="@font/open_sans"
                                android:textColor="#FFB8B8B8"
                                android:layout_marginTop="20dp"
                                android:textSize="12sp"/>

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinnerKecamatan"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_height="40dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutKelurahan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kelurahan"
                                android:fontFamily="@font/open_sans"
                                android:textColor="#FFB8B8B8"
                                android:layout_marginTop="20dp"
                                android:textSize="12sp"/>

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinnerKelurahan"
                                android:layout_width="match_parent"
                                android:textSize="15sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_height="40dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:src="@drawable/border_1dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            app:hintEnabled="true">

                            <EditText
                                android:id="@+id/et_alamat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Alamat Domisili Sekarang"
                                android:layout_centerHorizontal="true"
                                android:inputType="textPersonName|textCapWords"
                                android:imeOptions="actionDone"
                                android:paddingTop="10dp"
                                android:background="@android:color/transparent"
                                android:layout_marginTop="25dp"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/new_text_black"
                                android:textSize="15sp"/>
                        </com.google.android.material.textfield.TextInputLayout>

<!--                        <ImageView-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="2dp"-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            android:src="@drawable/border_1dp"/>-->

<!--                        <com.google.android.material.textfield.TextInputLayout-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="20dp"-->
<!--                            app:hintEnabled="true">-->

<!--                            <EditText-->
<!--                                android:id="@+id/et_kode_pos"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:hint="Kode Pos"-->
<!--                                android:layout_centerHorizontal="true"-->
<!--                                android:inputType="number"-->
<!--                                android:imeOptions="actionDone"-->
<!--                                android:paddingTop="10dp"-->
<!--                                android:background="@android:color/transparent"-->
<!--                                android:layout_marginTop="25dp"-->
<!--                                android:fontFamily="@font/open_sans"-->
<!--                                android:textColor="@color/new_text_black"-->
<!--                                android:textSize="15sp"/>-->
<!--                        </com.google.android.material.textfield.TextInputLayout>-->

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/border_1dp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginLeft="13dp"
                        android:text="Simpan"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/open_sans_bold"
                        android:backgroundTint="@color/colorAccentDark2"/>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <me.zhanghai.android.materialprogressbar.MaterialProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:mpb_progressStyle="horizontal"
            app:mpb_useIntrinsicPadding="false"
            android:layout_alignParentTop="true"
            app:mpb_showProgressBackground="false"
            style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding" />
    </RelativeLayout>
</LinearLayout>